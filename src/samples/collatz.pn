fn main()
{
	var x = 12;

	var steps = 0;
	{
		if x == 1
			goto return;
		var y = x;
		{
			if y == 0
			{
				if y + y == x
				{
					x = y;
					goto next;
				}
				y = y + 1;
				loop;
			}
			else if y == 1
			{
				x = x + x + x + 1;
				goto next;
			}
			y = y - 2;
			loop;
		}
		next:
		steps = steps + 1;
		loop;
	}

	return:
	steps
}
