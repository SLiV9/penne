$"wasm4.pn"

const SMILEY: [8]u8 = [
	0b11000011,
	0b10000001,
	0b00100100,
	0b00100100,
	0b00000000,
	0b00100100,
	0b10011001,
	0b11000011,
];

pub extern fn update()
{
	PALETTE[0] = 0x00303b;
	PALETTE[1] = 0xff7777;
	PALETTE[2] = 0xffce96;
	PALETTE[3] = 0xf1f2da;

	DRAW_COLORS = 2;
	text("Hello from Penne!", 10, 10);

	var gamepad = GAMEPAD1;
	if gamepad & BUTTON_1 != 0
	{
		DRAW_COLORS = 4;
	}

	blit(SMILEY, 76, 76, 8, 8, BLIT_1BPP);
	text("Press X to blink", 16, 90);
}
